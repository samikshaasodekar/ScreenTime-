{
  "manifest_version": 3,
  "name": "Screen Time Checker",
  "version": "1.0",
  "description": "Track your active screen time on Chrome.",
  "permissions": ["storage", "idle"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}